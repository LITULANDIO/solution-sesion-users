extends layout

block content
  .welcome.text-center.container
    p#welcome-top
      | #{retiros.title}
    .hr-line
  .my-container
    .row
      .col-md-7
        #article-photo-carousel.img-responsive.carousel.slide
          .img-responsive.carousel-inner.cont-slider
            .item.active
            img(src= retiros.imageUrl, width="100%" height="100%" class="image1")
         
           
      .col-md-5
        .panel.panel-yellow
          .panel-heading.text-center Detalles
          .panel-body
            img.icon.icons8-Marker(src='data:image/png;base64,', width='26', height='26')
            |  Localidad: #{retiros.localitation}
            hr
            |  
            img(src='https://maxcdn.icons8.com/Android/PNG/24/Time_and_Date/calendar-24.png', title='Calendar', width='24')
            |  Fecha Inicio: #{retiros.startDate}
            br
            | &nbsp; &nbsp; &nbsp; &nbsp; Fecha Fin: #{retiros.endDate}
            hr
            |  
            img.icon.icons8-Clock(src='data:image/png;base64,', width='24', height='24')
            |  Hora Inicio: #{retiros.timeHourStart}:#{retiros.timeMinuteStart}
            br
            | &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;Hora Fin: #{retiros.timeHourEnd}:#{retiros.timeMinuteEnd}
            hr
            |  
            img.icon.icons8-Euro-Filled(src='data:image/png;base64,', width='26', height='26')
            |  Precio: 275 €
            br
  .row
    .col-md-7.panel-two
      .panel-two
        .panel.panel-yellow
          .panel-heading.text-center Descripci&oacute;n
          .panel-body
            p.margin-text #{retiros.description}
    .col-md-5.panel-three
      .panel-two
        .panel.panel-yellow
          .panel-heading.text-center Compartir
          .panel-body.my-panel.social#sahre
            
            .social-nav    
              ul
                li
                  a.twitter( target='_blank', title='Twitter', rel='nofollow' href='https://twitter.com/share', data-via='mariuCSS') 
                    script.
                                  !function(d,s,id){
                                  var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';
                                  if(!d.getElementById(id)){
                                  js=d.createElement(s);
                                  js.id=id;
                                  js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');')
                    i.fa.fa-twitter
                li
                  a.facebook(target='_blank', title='Facebook', rel='nofollow', onclick="javascript:window.open(this.href,'', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;", href=' http://www.facebook.com/share?url=http://encuentratucamino.herokuapp.com/details/'+ retiros._id) 

                    i.fa.fa-facebook
                   
                li
                  a.google(target='_blank', title='Google plus', rel='nofollow',onclick="javascript:window.open(this.href,'', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;", href='https://plus.google.com/share?url=http://encuentratucamino.herokuapp.com/details/'+ retiros._id) 

                    i.fa.fa-google-plus
                      
 
    .panel-four
      .panel-two.social
        .panel.panel-yellow.text-center.c#ubic
          .panel-heading.text-center Ubicación
          .panel-body.my-panel.social.bottom-map
            span.text-center.c
            #map
            input#long(name="long",,  value=  parseFloat(retiros.long) )
            input#lat(name="lat",,  value= parseFloat(retiros.lat) )
           
    .col-md-5.panel-five
      .panel-bottom
        .panel.panel-yellow
          .panel-heading.text-center Tags 
          .panel-body.my-panel
            span.text-center.c     
            |#{retiros.tags}

  script(src='/js/mapsEvent.js')
  script(src = 'https://maps.googleapis.com/maps/api/js?key=AIzaSyC52RbKqcX9jVN7P8gQG8VYnhU5jl6gMuI&callback=initMap')
